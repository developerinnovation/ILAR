<div class="caterory select">
    <div class="desktop">
        <nav>
            <li class="active">Últimos cursos</li>
            <li>Categoria de prueba</li>
        </nav>
    </div>
    <div class="mobile">
        <select name="select">
            <option value="value1" selected>Últimos cursos</option> 
            <option value="value2">Categoria de prueba</option>
        </select>
    </div>
</div>

<div class="course category" ng-cloak ng-init="ngt.loadCourseCategory('all','0','4')">
    <div class="item-news course-category home" ng-repeat="course in ngt.CourseCategory">
        <div class="picture">
            <figure>
                <picture>
                    <source srcset="{[{ course.foto_portada.uri_313x156 }]}" 
                        media="(max-width: 767px)" 
                        alt="{[{ course.foto_portada.alt }]}" 
                        title="{[{ course.foto_portada.title }]}">
                    <img src="{[{ course.foto_portada.uri_604x476 }]}" 
                        alt="{[{ course.foto_portada.alt }]}" 
                        title="{[{ course.foto_portada.title }]}">
                </picture>
            </figure>
        </div>
        <div class="text">
            <h3 class="title">{[{ course.title }]}</h3>
            <div class="author multiple">
                <figure>
                    <img src="{[{ picture.picture_uri }]}" alt="{[{ picture.name_author }]}" ng-repeat="picture in course.expertos">
                </figure>
            </div>
            <div class="info">
                <div class="name author">
                    <ul>
                        <li ng-repeat="autor in course.expertos">
                            <a href="{[{ autor.uri }]}" class="link author">{[{ autor.name_author }]}</a>
                        </li>
                    </ul>
                </div>
                <time class="hour">{[{ course.horas }]} horas</time>
                <time class="date">Inicio: {[{ course.fecha_inicio }]}</time>
                <div class="rating">
                
                </div>
            </div>
            <div class="action">
                <button class="show-course">ver curso</button>
                <button class="save">guardar</button>
            </div>
        </div>
    </div>
    <div class="buttom load_more" ng-show="ngt.showMore">
        <button ng-click="ngt.loadMoreCourse()">Ver más cursos</button>
    </div>
    <div class="icon-load" ng-show="ngt.loading">
        <img src="../../../modules/custom/ngt/asset/image/loading.gif" alt="">
    </div>
</div>