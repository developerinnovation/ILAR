
{% set directive_new = directive|replace({'-':'_'}) %}
<div class="{{ class }}" {{ directive }} ng-cloak ng-init="uuid_{{ directive_new }} = '{{ uuid }}'">
    <div class="main-form-register-user"  style="background-image:url({{ file_url(image_login_background_url) }}); background-repeat: no-repeat;">
        <div class="image-logo__wrapper">
            <figure> 
                <img src="{{ file_url(image_logo_url) }}">
            </figure>
        </div>
        <div class="register-user-form login-form__wrapper register-user">
            <form>
                <div class="register-user-form__top recovery">
                    <h3 ng-if="step < 4">{{ config.title }}</h3>
                    <h3 ng-if="step == 4">{{ config.title_picture }}</h3>

                    <div ng-if="step == 5">
                        <i ng-class="(status_register == true) ? 'icon-ready' : 'icon-failed'"></i>
                        <h4>{[{ status_register_label }]}</h4>
                    </div>

                    <ul class="nav-step">
                        <li ng-class="(step == 1) ? 'active' : ''">step1</li>
                        <li ng-class="(step == 2) ? 'active' : ''">step2</li>
                        <li ng-class="(step == 3) ? 'active' : ''">step3</li>
                        <li ng-class="(step == 4) ? 'active' : ''">step4</li>
                        <li ng-class="(step == 5) ? 'active' : ''">step5</li>
                    </ul>
                    
                    <div class="input-form">
                        <p ng-if="step != 5" class="message_login">{[{ message }]}</p>
                        
                        <div class="cards" ng-if="step == 1">
                            <div>
                                <input class="input-name" type="text" ng-model="name" id="name" name="name" maxlength="100" placeholder="{{ config.name }}">
                                <input class="input-mail" type="text" ng-model="email" id="email" name="email" maxlength="100" placeholder="{{ config.email }}">
                                <input class="input-date" type="date" ng-model="date" id="date" name="date" placeholder="{{ config.date }}">
                                <select class="select-profession"  ng-model="profession" name="profession" id="profession">
                                    <option selected disabled>{{ config.profession }}</option>
                                    <option value="{[{ value.tid }]}" ng-repeat="(key, value) in profession">{[{ value.name }]}</option>
                                </select>
                            </div>
                        </div>

                        <div class="cards" ng-if="step == 2">
                            <div>
                                <select class="select-country place-select" ng-model="country" name="country" id="country" ng-disabled="enableCountry">
                                    <option disabled>{{ config.profession }}</option>
                                    <option value="{[{ value.tid }]}" ng-repeat="(key, value) in country">{[{ value.name }]}</option>
                                </select>

                                <select class="select-state place-select" ng-model="state" name="state" id="state" ng-disabled="enableState">
                                    <option disabled>{{ config.state }}</option>
                                    <option value="{[{ value.tid }]}" ng-repeat="(key, value) in state">{[{ value.name }]}</option>
                                </select>

                                <select class="select-city place-select" ng-model="city" name="city" id="city" ng-disabled="enableCity">
                                    <option disabled>{{ config.city }}</option>
                                    <option value="{[{ value.tid }]}" ng-repeat="(key, value) in city">{[{ value.name }]}</option>
                                </select>

                            </div>
                        </div>

                        <div class="cards" ng-if="step == 3">
                            <div>
                                
                                <input class="input-username" type="text" ng-model="username" name="username" id="username" maxlength="100" placeholder="{{ config.user_name }}">
                                <input class="input-password" type="password" ng-model="password" name="password" id="password" maxlength="10" placeholder="{{ config.password }}">
                                <ul>
                                    <li ng-class="criteriar-{[{ key }]}" class="validate" ng-repeat="(key, value) in pass_criteriar">{[{ value }]}</li>
                                </ul>
                                <input class="input-password" type="password" ng-model="repeatPassword" name="repeatPassword" id="repeatPassword" maxlength="10" placeholder="{{ config.repeat_password }}">
                                <div class="term-and-conditions">
                                    <input type="radio" name="" id="">
                                    {{ terms_text|raw }}
                                </div>
                            </div>
                        </div>

                        <div class="cards" ng-if="step == 4">
                            <div>
                                <img src="https://www.pavilionweb.com/wp-content/uploads/2017/03/man-300x300.png" width="72"; height="72" alt="">
                                <p class="message_status_load_pic">{[{ messageStatusLoadPic }]}</p>
                                <button ng-click="omitLoadPic()">{[{ txtBtnOmit }]}</button>
                            </div>
                        </div>

                        <div class="cards" ng-if="step == 5">
                            <div>
                                <p class="message_status_register" ng-class="(status_register == true) ? 'ready' : 'failed'" >{[{ messageStatusRegister }]}</p>
                                <h4>{[{ labelStatusRegister }]}</h4>
                            </div>
                        </div>

                    </div>
                    <div class="register-user-form__submit">
                        <div class="action-next">
                            <button 
                                ng-click="(step <= 4) ? actionNext() : actionLogin()"
                                ng-disabled="btnDisabled">{[{ txtBtnNext }]}</button>
                        </div>
                        <div class="action-return">
                            <button 
                                ng-if="step <= 4"
                                ng-click="(step <= 3) ? actionCancell() : actionReturn()"
                                ng-disabled="btnDisabled">{[{ txtBtnReturn }]}</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
